#!/usr/bin/env bash
#In this first task you need to configure web-02 to be identical

sudo apt update
sudo apt-get -y install nginx
sudo ufw allow 'Nginx HTTPS'
sudo chown -R "$USER:$USER" /var/www/html
sudo chmod -R 755 /var/www/
cp /var/www/html/index.html /var/www/html/index.bak
echo "Hello World!" > /var/www/html/index.html

redirect_string='return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;'

sudo sed -i 's|^.*location /redirect_me {.*$|location /redirect_me { '"$redirect_string"' }|' /etc/nginx/sites-enabled/default

sudo systemctl restart nginx
